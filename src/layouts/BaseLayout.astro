---
const { title = 'Dish Diary', description = 'Personal food review blog' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <style>
      :root{--bg:#0f172a;--card:#111827;--text:#e5e7eb;--muted:#9ca3af;--accent:#22c55e;--line:#1f2937}
      *{box-sizing:border-box} body{margin:0;font-family:Inter,system-ui,sans-serif;background:linear-gradient(180deg,#020617,#0f172a 220px);color:var(--text)}
      .container{width:min(1080px,92vw);margin:0 auto}.hero{padding:2rem 0 1rem}.hero h1{margin:.2rem 0}.muted{color:var(--muted)}
      .tabs{display:flex;gap:.6rem;flex-wrap:wrap;margin:1rem 0 1.2rem}.tab{border:1px solid var(--line);color:var(--text);padding:.45rem .7rem;border-radius:999px;text-decoration:none;background:#0b1220}
      .tab.active{border-color:var(--accent);box-shadow:0 0 0 1px var(--accent) inset}.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:1rem}
      .card{border:1px solid var(--line);background:var(--card);border-radius:14px;padding:.9rem}.thumb{width:100%;height:160px;object-fit:cover;border-radius:10px;border:1px solid var(--line)}
      .dish-image{width:100%;max-height:420px;object-fit:cover;border-radius:14px;border:1px solid var(--line)}
      .row{display:flex;gap:1rem;align-items:center;justify-content:space-between;flex-wrap:wrap}.map{margin-top:1rem}
      code,pre{background:#030712;border:1px solid var(--line);padding:.12rem .3rem;border-radius:6px}
      .leaflet-container{height:340px;border-radius:12px;border:1px solid var(--line)}
    </style>
  </head>
  <body>
    <main class="container">
      <header class="hero">
        <p class="muted">üçΩÔ∏è Personal Food Review Blog</p>
        <h1>Dish Diary</h1>
        <p class="muted">Markdown-powered dishes, optimized images, and map markers for where I ate them.</p>
      </header>
      <slot />
    </main>
  </body>
</html>
